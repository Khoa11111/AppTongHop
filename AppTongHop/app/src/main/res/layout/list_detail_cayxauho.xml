<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cayxauho_arwBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="350dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/xau_ho" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Trinh nữ (từ tiếng Latinh: pudica hay còn gọi là cây xấu hổ, mắc cỡ, cây thẹn, hàm tu thảo, cỏ trinh nữ; (danh pháp khoa học: Mimosa pudica L.) là một loại thực vật sống ít năm thuộc họ Đậu. Loài này có đặc điểm là các lá kép gập vào trong và cụp xuống mỗi khi bị chạm vào hoặc bị rung lắc để tự bảo vệ khỏi tổn hại, rồi mở lại vài phút sau đó."
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

    </LinearLayout>

</RelativeLayout>