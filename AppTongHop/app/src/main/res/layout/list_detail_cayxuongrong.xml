<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cayxuongrong_arwBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="350dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/xuong_rong" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Xương rồng là một loài thực vật mọng nước, có nhiều dạng phát triển: thành cây lớn, thành bụi hoặc phủ sát mặt đất. Đa số các loài xương rồng đều mọc và phát triển từ đất, nhưng cũng có rất nhiều loài ký sinh trên các loài cây khác để phát triển."
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

    </LinearLayout>

</RelativeLayout>